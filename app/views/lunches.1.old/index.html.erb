<p id="notice"><%= notice %></p>

<h1>Listing Lunches</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Pricemenu</th>
      <th>Quantity</th>
      <th>Fecha</th>
      <th>Tipoplato</th>
      <th>Tipomenu</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lunches.each do |lunch| %>
      <tr>
        <td><%= lunch.name %></td>
        <td><%= lunch.description %></td>
        <td><%= lunch.price %></td>
        <td><%= lunch.pricemenu %></td>
        <td><%= lunch.quantity %></td>
        <td><%= lunch.fecha %></td>
        <td><%= lunch.tipoplato %></td>
        <td><%= lunch.tipomenu %></td>
        <td><%= lunch.restaurant %></td>
        <td><%= link_to 'Show', lunch %></td>
        <td><%= link_to 'Edit', edit_lunch_path(lunch) %></td>
        <td><%= link_to 'Destroy', lunch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

