
 <% if user_signed_in? %>
 <% if current_user.tipoousuario ==3 %>
<div class="container">
      <div class="row">
          <div class="col-md-12">
              <h4 class="page-head-line">Lista de Restaurantes</h4>
          </div>
      </div>
        </br>
    <div class="row">
              
     <div class="col-md-12">
     <div class="panel panel-default">
                        <div class="panel-heading">
                         Restaurantes
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            
                                            <th>Nombre</th>
                                            <th>Descripcion</th>
                                            <th>Direccion</th>
                                            <th>Distrito</th>
                                            <th>RUC</th>
                                            <th>Télefono</th>
                                            <th>Correo</th>
                                            <th>Usuario</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                            </thead>
                   <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.direccion %></td>
         <td><%= restaurant.distrito.name %></td>
        <td><%= restaurant.ruc %></td>
        
        <td><%= restaurant.telefono %></td>
        <td><%= restaurant.correo %></td>
        <td><%= restaurant.user.email %></td>
       
        <td><%= link_to 'Editar', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Eliminar', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
                    
    </table>                
                  
                  
                  
            </div>          
            </div>              
              <%= link_to 'Registrar Restaurant', new_restaurant_path %>
       </div>
    </div> 
  
   </div>

 <% else %>
 
 <div class="container">
     <div class="row">
         <label> Usted no cuenta con los privilegios para acceder a esta página.</label>
         
     </div>
     
     
 </div>
 
 <%end%>

 <% else %>
   <div class="container">
       <div class="row">
         <div class="col-xs-4">
        <%= link_to "Sign up", new_user_registration_path %> or
        </div>
        <div class="col-xs-4">
        <%= link_to "Sign in", new_user_session_path %>
        </div>
      </div>
    </div>
    
<% end %>


